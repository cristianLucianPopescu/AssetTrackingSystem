<Page
    x:Class="TrackMe.Views.DeletePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid>
            <StackPanel Margin="150,10,150,400">
                <TextBox Name="assetName" Text="" Margin="200,70,200,50" TextWrapping="Wrap" PlaceholderText="Write the asset's name you want to delete from database"/>
                <Button Click="Button_Click_1" Content="DELETE HARDWARE" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </StackPanel>

            <StackPanel Margin="150,350,150,10">
                <TextBox Name="softwareProductName" Text="" Margin="200,10,200,50" TextWrapping="Wrap" PlaceholderText="Write the asset's name you want to delete from database"/>
                <Button Click="Button_Click_2" Content="DELETE SOFTWARE" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </StackPanel>
            
        </Grid>
    </Grid>
</Page>
